<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.alta.AltaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etDniTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="DNI"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/eTnombreApellidoTutor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/eTnombreApellidoTutor"
            app:layout_constraintTop_toBottomOf="@+id/eTnombreApellidoTutor" />

        <EditText
            android:id="@+id/eTnombreApellidoTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Nombre y apellidos"
            android:inputType=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="DATOS NIÑ@"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/eTnombreApellidoNino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Nombre y apellidos"
            android:inputType=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/botonEnviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:text="Enviar"
            android:textStyle="bold"
            android:textSize="15dp"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etDniNino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="DNI"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/eTnombreApellidoNino"
            app:layout_constraintStart_toStartOf="@+id/eTnombreApellidoNino"
            app:layout_constraintTop_toBottomOf="@+id/eTnombreApellidoNino" />

        <EditText
            android:id="@+id/etFechaNacimientoNino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Fecha nacimiento"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/etDniNino"
            app:layout_constraintStart_toStartOf="@+id/etDniNino"
            app:layout_constraintTop_toBottomOf="@+id/etDniNino" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:text="DATOS TUTOR"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etFechaNacimientoNino" />

        <EditText
            android:id="@+id/etTelefonoTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="@+id/etDniTutor"
            app:layout_constraintStart_toStartOf="@+id/etDniTutor"
            app:layout_constraintTop_toBottomOf="@+id/etDniTutor" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>